{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "moduleResolution": "Node16",
    "target": "ES2022",
    "module": "Node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "stripInternal": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
  },
  "exclude": ["dist"],
  "include": ["src/**/*", "types.d.ts"]
}